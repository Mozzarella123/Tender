@model int
<div class="actions">
    <div class="edit d-inline-block">
        <form class="form-inline" asp-action="Edit" method="get" asp-route-Id="@Model">
            <button class="btn btn-primary btn-sm">Редактировать</button>
        </form>
    </div>
    |
    <div class="delete  d-inline-block" >
        <form class="form-inline" asp-action="Delete" method="post" asp-route-Id="@Model">
            <button class="btn btn-danger btn-sm needconfirm" type="submit">Удалить</button>
        </form>
    </div>
</div>